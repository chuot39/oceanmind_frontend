{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"],
      "@scss/*": ["src/core/scss/*"],
      "@views/*": ["src/views/*"],
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@assets/*": ["src/assets/*"],
      "@services/*": ["src/services/*"],
      "@constants/*": ["src/constants/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
